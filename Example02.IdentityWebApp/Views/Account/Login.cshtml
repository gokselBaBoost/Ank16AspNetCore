@model LoginViewModel
@{
    Layout = "_LayoutLogin";
}
<form asp-action="Login">
    <img class="mb-4" src="~/image/icons8-login-64.png" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
    <span class="text-danger">@ViewBag.ErrorMessage</span>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-floating">
        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
        <label asp-for="Email">@Html.DisplayNameFor(m => m.Email)</label>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Password" class="form-control" placeholder="password" />
        <label asp-for="Password">@Html.DisplayNameFor(m => m.Password)</label>
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-check text-start my-3">
        <input asp-for="RememberMe" class="form-check-input" value="remember-me">
        <label asp-for="RememberMe" class="form-check-label">
            Remember me
        </label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-body-secondary text-center">&copy; 2017–2024</p>
</form>