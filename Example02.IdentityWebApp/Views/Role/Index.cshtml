@model List<RoleViewModel>
@{
    int i = 1;
}
<a asp-action="Add" class="btn btn-success" role="button">Yeni Role</a>
<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Adı</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (RoleViewModel role in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@role.Name</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <a asp-action="Detail" asp-route-id="@role.RoleId" role="button" class="btn btn-primary">Detay</a>
                        <a asp-action="Edit" asp-route-id="@role.RoleId" role="button" class="btn btn-info">Düzenle</a>
                        <a asp-action="Users" asp-route-id="@role.RoleId" role="button" class="btn btn-warning">Kullanıcılar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>