@model List<UserViewModel>
@{
    int i = 1;
}
<a asp-action="Add" class="btn btn-success" role="button">Yeni Kullanıcı</a>
<hr />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">E-Posta Adresi</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Doğum Tarihi</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(UserViewModel user in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.BirthDate</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                        <a asp-action="Detail" asp-route-id="@user.UserId" role="button" class="btn btn-primary">Detay</a>
                        <a asp-action="Edit" asp-route-id="@user.UserId" role="button" class="btn btn-info">Düzenle</a>

                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-warning dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Role İşlemleri
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-action="AddRole" asp-route-id="@user.UserId" class="dropdown-item">Yeni Role Ekle</a></li>
                                <li><a asp-controller="Role" asp-action="UserRoles" asp-route-id="@user.UserId" class="dropdown-item">Rolleri</a></li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>