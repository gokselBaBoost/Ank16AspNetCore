@model LoginViewModel
@{
    Layout = "_LayoutAccountForm";
    ViewBag.LoginBoxMsg = "Sign in to start your session";
    ViewBag.LoginLink = false;
    ViewBag.ForgotPasswordLink = false;
    ViewBag.RegisterLink = false;
}
<form asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
    <div asp-validation-summary="All" class="bg-danger"></div>
    <div class="mb-3">
        <div class="input-group">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <div class="form-text pl-1 text-danger">
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="mb-3">
        <div class="input-group">
            <input asp-for="Password" class="form-control" placeholder="Password">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <div class="form-text pl-1 text-danger">
            <span asp-validation-for="Password"></span>
        </div>        
    </div>
    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
                <input asp-for="RememberMe">
                <label asp-for="RememberMe">
                    Remember Me
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div>
        <!-- /.col -->
    </div>
</form>