@model List<CityEditListViewModel>

<div class="row">
    <div class="col">
        <h1>Country List</h1>
        <a class="btn btn-success" asp-controller="City" asp-action="Add">Yeni</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Adı</th>
                    <th>Ülke</th>
                    <th>Durumu</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody id="city-list">
                @foreach (CityEditListViewModel item in Model)
                {
                    <tr>
                        <td>@item.RowNum</td>
                        <td>@item.Name</td>
                        <td>@item.Country.Name</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a class="btn btn-info" asp-controller="City" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                            <a class="btn btn-secondary" asp-controller="City" asp-action="Detail" asp-route-id="@item.Id">Detay</a>
                            <a class="btn btn-danger" asp-controller="City" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>

                                @for (int i = 1; i <= ViewBag.PageCount; i++)
                                {
                                    <li class="page-item"><a class="page-link" onclick="GetCities(@i)">@i</a></li>
                                }

                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </nav>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/city/index.js"></script>
}