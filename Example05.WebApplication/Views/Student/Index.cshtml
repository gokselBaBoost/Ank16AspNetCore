@model List<Student>
@{
    //ViewBag.Title = "Bu seferde buradan değiştim.";
    string title = ViewData["Baslik"].ToString();
}

@if (ViewBag.CreateStatus == true)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.CreateMessage
    </div>
}
else if (ViewBag.CreateStatus == false)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.CreateMessage
    </div>
}
else
{

}

<h1 class="m-3">@title.ToUpper()</h1>
<div class="row mt-5">
    <div class="col-3">
        Sol Taraf
    </div>
    <div class="col-9">
        <!--
            Burası Index sayfası olarak Öğrencilerin listelendiği, Listedeki öğrencilerin bilgilerinin güncelleme/detay/silme işlemlerinin
            yapılacağı, aynı zamanda bir ekleme butonun olacağı bir sayfa tasarımı kurugulanacaktır.
        -->
        <div class="d-flex justify-content-end">
            <div class="p-2">
                <a asp-controller="Student" asp-action="Create" class="btn btn-success" role="button">Yeni</a>
            </div>
            <div class="p-2">
                <a asp-controller="Teacher" asp-action="Create" class="btn btn-info" role="button">Yeni Öğretmen</a>
            </div>
            <div class="p-2">
                <a asp-controller="Lesson" asp-action="Create" class="btn btn-warning" role="button">Yeni Ders</a>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Adı</th>
                    <th scope="col">Soyadı</th>
                    <th scope="col">Cinsiyeti</th>
                    <th scope="col">E-Posta</th>
                    <th scope="col">Doğum Tarihi</th>
                    <th scope="col">Durumu</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @foreach(Student student in Model)
                {
                    <tr>
                        <th scope="row">@student.Id</th>
                        <td>@student.Name</td>
                        <td>@student.Surname</td>
                        <td>@student.Gender</td>
                        <td>@student.Email</td>
                        <td>@student.BirthDate.ToString("dd/MM/yyyy")</td>
                        <td>@student.StudentStatus</td>
                        <td>
                            @* /Student/Details/1 *@
                            <a asp-controller="Student" asp-action="Details" asp-route-id="@student.Id" class="btn btn-secondary" role="button">Detay</a>
                            <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary" role="button">Düzenle</a>
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger" role="button">Sil</a>

                        </td>
                    </tr>                    
                }
            </tbody>
        </table>
    </div>
</div>