@model List<StudentViewModel>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (StudentViewModel item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
            </tr>
        }
    </tbody>
</table>